<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SolvedStageActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <view
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            class="ru.nsu.ccfit.hwr.activity.ExpressionView"
            android:id="@+id/expressionView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_solution"
            android:id="@+id/show_solution_btn" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_solution"
            android:id="@+id/send_solution_btn" />

    </LinearLayout>

    <view
        class="ru.nsu.ccfit.hwr.activity.ExpressionView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_weight="40" />

</LinearLayout>